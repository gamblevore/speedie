			return
		
		if (Saveness == kNeedsOuterBrackets)
			fs <~ '('
		WriteDeclBrackets( self, fs )

		if (fc == @Rel)
			fs <~ '('
		if (fc == @arg)
			fc.MiniArgCpp( fs )
		  else
			fc.Export( fs )
		if (fc == @Rel)
			fs <~ ')'
		if (Saveness == kNeedsOuterBrackets)
			fs <~ ')'


