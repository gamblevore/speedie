	function C_RenderTmp (fpMsgRenderCpp)
		opt norefcounts			
		|| name = .name
		|| needbra = false
		
		if (name == "exit")
			fs <~ "break"
			
		  elseif (name == "if")
			fs <~ Cpp_Export.IfName
			needbra = true	

		  elseif (name == "while") 
			if .first!.unbra isthing "true"
				fs <~ "while"
			  else
				fs <~ Cpp_Export.WhileName
			needbra = true	

		  elseif (name == "elseif")
			fs <~ "else "
			fs <~ Cpp_Export.IfName
			needbra = true	

		  elseif (name == "ignore")
			return

		  elseif (name == "rejoin")
			0

		  elseif (name == "swap")
			fs <~ "JB_Swap"
			debugat
			C_ParamsRender(self, fs)
			return
			
		  else
			fs <~ name
		
		if needbra
			|| f = .first!
			needbra  =  f != @bra and @brel
		
		for mv in self
			fs <~ ' '
			if needbra
				fs <~ '('
			mv.Export( fs )
			if needbra
				fs <~ ')'
			needbra = false
		

