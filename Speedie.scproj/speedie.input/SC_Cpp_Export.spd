	function Faststring.AppendCpp (|string| s)
		self <~ '"'
		for (c in s) (i)
			if c == '?'
				self <~ `\?`
			  elseif c == '\\'
				self <~ `\\`
			  elseif c == 9
				self <~ `\t`
			  elseif c == 10
				self <~ `\n`
			  elseif c == 13
				self <~ `\r`
			  elseif (c >= 32) and (c != '"') and (c <= 127)
				self <~ c
			  else
				self <~ `\x`
				.appendhex(c, 2)
				if s[i+1].IsHex
					self <~ `""`
		self <~ '"'


