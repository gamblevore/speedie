function FindModule (|String| name, |Message| where=nil, |SCNodeFindMode| Mode=0, |SCModule|)
	opt norefcounts

	|| Upon = self
	while upon
		if name ~= upon.name
			if upon isa scmodule
				return upon

		|| Obj = upon[ name ]
		if Obj isa SCModule
			return Obj
		if mode is dontgoup
			exit
		upon = upon.FindModuleParent(mode)
		
	if where and (Mode isnt NoErrors)
		|| err = ("Can’t find class: ", "Can’t find module: ")(mode is ForClass)
		error (where, err + name)


