
module Stability
	|| LastLibFuncID = 0 
	
	// todo: cpp_renderer needs to put dummy fields for empty spots

	function StabiliseFuncs
		|| funcs = Compiler.library["stable_id_bank.txt"]
		|| Data = funcs.ReadAll.trim
		stability.UseFuncBank(data)
		|| g = packmaker.PackGlobSize
		if !options.MakeExec
			.StabliseFuncsSub(nil, g)
		  else
			|| fs = faststring()
			fs <~ data ?? "// beta-file. Unstable."
			.StabliseFuncsSub(fs, g)
			funcs.smartdata = fs|string|
	

	function SortExports (|[scfunction]|)
		opt norefcounts
		rz = packmaker.libfuncs
		if !rz.length
			PackMaker.AddAll
		rz.Sort(&CodeSorter.PackIDAndExportName)
		.Debug
	
	
	function Debug 
		for f in packmaker.libfuncs
			print f.packid|int|
			print " "
			printline f.exportname

	
	function StabliseFuncsSub (|faststring| fs, |int| frogs)
		opt norefcounts
		|&&nil| Table		// just pass 4096. Saves all the fÃ¼cking around with calculating sizes.
		target debug
			if !options.MakeExec
				Table = jb_vm.vm.InitTable(4096, frogs)

		// why this rather than the libfuncs?
		// of course, if something isn't in the libfuncs, thats an issue.
		// but it should be... by now?

		for fn in .sortexports
			if fn.NeedsID
				fn.MakeID(fs, table)
			
	
	function BuildLibGlobTable (|message| T, |dictionary of scdecl| table = dictionary())
		opt norefcounts
		for d in PackMaker.LibGlobs
			table[d.ExportName] = d
			if d.ExportPosition					// hmmm... shouldn't happen

		for row in T
			|| d = table[row.name]
				|| pos = row[@num]
					d.ExportPosition = pos.int	
	
	
	function DumpGlobs (|faststring| fs=faststring(), |file| f)
		opt norefcounts
		for d in PackMaker.LibGlobs
			fs <~ "${d.exportname} ${D.exportposition}\n"
		f.SmartData = fs
	
	
	function packmaker.OrderLibGlobs
		opt norefcounts
		.LibGlobs.Sort(SimplestFirst)			// sort them so empty values come after
		._LibGlobSize = .GlobalsSize(.libglobs) // rebuild size


	function StabliseGlobs
		|| globs = Compiler.library["stable_glob_bank.txt"]
		|| str = globs.readall(64K)
		.BuildLibGlobTable(str.parse)			// fill table with old values
		packmaker.OrderLibGlobs
		if options.MakeExec
			.DumpGlobs(globs)
		
	
	function scfunction.NeedsID (|bool|)
		require !.IsMacro and .IsLibrary
		require self isnt disabled and AlwaysInline
		require self|scnode| isnt private
		return true
	
		
	function scfunction.MakeID (|faststring| fs, |?&&nil| table)
		|| id = .PackID
		if !id
			if fs
				fs <~ "\n$.ExportName"
			id = Stability.LastLibFuncID++
			.PackID = id
		
		if table
			|| fn = jb_vm.Load(.exportname) // an actual function pointer for testing
				Table[id+31] = fn

	
	function UseFuncBank (|string| Data)
		|| ID = .LastLibFuncID
		for str.lines in data
			id++
			|scbetternode--| fn = Compiler.ExportNames[str]
			if fn isa SCFunction
				if !fn.islibrary // huh? 
				
				check (!fn.PackID) (str + " replicated ID.")
				fn.PackID = id
		.LastLibFuncID = ID	
	
