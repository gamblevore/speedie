function Message.CopyAllBefore (|Message| Before, |message| copylayer)
	opt norefcounts
	|| curr = .Prev
	while curr
		|| cpy = curr.Copy(copylayer)
		Before.Prev = cpy
		Before = cpy
		curr--


function Message.CopyAllAfter (|Message| after, |message| copylayer)
	opt norefcounts
	|| curr = .next
	While curr
		|| cpy = curr.Copy(copylayer)
		after.Next = cpy
		after = cpy
		curr++


