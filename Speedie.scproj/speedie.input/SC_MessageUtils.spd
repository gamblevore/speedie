function Message.NegateThg (|Message|)
	opt norefcounts
	if .name == "true"
		.name = "false"
		.obj = FalseBool
		return self
	if .name == "false"
		.name = "true"
		.obj = TrueBool
		return self
	return .WrapWith(@BRel, "!")


function Message.Negate (|Message!|)
	opt norefcounts
	real self
	|| upon = self
	|| f = .func
	if f == @thg
		return .negatethg
	
	if f == @bra
		upon = .unbra
		if upon.func == @thg
			upon.negatethg
			.obj = upon.obj
			return self
	
	if upon isbrel "!"
		upon.become(@bra)
		return self
	
	if upon.func == @rel
		|| opmsg = upon.second!
		|| op = scoperator.dict[opmsg.name]
			|| nega = op.opposite
				opmsg.become(nega)
				return self

	if f == @bra
		.Become(@brel, "!")					// the negator!
		return self

	using self
	rz = .WrapWith(@BRel,  "!")			// also the negator!


