function NewEqRel (|Message| L, |Message| R, |Message|)
	opt norefcounts
	rz = @rel.msg
	rz <~ L
	|| op = rz.msg(@Opp, "=")
	op.obj = scoperator.assigns
	rz <~ R

	rz.ASMType = ASMType.kSetRel


function NewEqRel (|string| L, |String| R, |Message|)
