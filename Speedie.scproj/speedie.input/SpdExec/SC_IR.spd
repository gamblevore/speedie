

// exec.scproj uses this file.... so dont add too much to it!

struct FatASM
	|uint[6]|		R	
	|byte|			Op
	|byte|			Label	// 255 labels per function
	|uint16| 		BlockNum
	|uint|			Location
	
	
	function FileNum (|int|)
		return .Location & 0x4095
	
	function BytePos (|int|)
		return .Location >> 12
	
	operator isa (|int| m, |bool|)
		return m == .op
		
	function Renda (|FastString| fs)
		opt norefcounts
		|| op = instruction.typelist[.op]		#debug_require
		fs <~ op.name
		fs <~ ':'
		fs <~ (' ', 5-op.name.length)
		|| GotAny = ""
		|| Remain = 25
		|| f = op.sizes
		for i in f.count
			|| bs = f[i].bitsize
			if remain > 0 and bs
				fs <~ gotany
				gotany = ", "
				if f[i].isreg
					fs <~ 'r'
				fs <~ .r[i]
				remain += bs

	function Print
		visible
		if asm.NoisyASM >= 3
			|| fs = faststring()
			.Renda(fs)
			printline fs

 
 
