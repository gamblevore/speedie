function message.Tern (|asmreg| a, |asmreg| b, |asmreg| c, |asmreg| d)
	pragma inline,  cpp_part ASMTern
	|| fat = asmstate.sh <~ (asm.tern, self)
	fat.dest(0) = a
	fat.prm(1) = b
	fat.prm(2) = c
	fat.prm(3) = d

	

struct FatASM
	|uint[6]|		R	
	|byte|			Op
	|byte|			Label	// 255 labels per function
	|uint16| 		BlockNum
	|uint|			Location
	|int| 			RefCount
	|ASMReg| 		Reg
	|uint[3]| 		FAT // just so i GET OVER TRYING TO MAKE THIS SMALL (for now :D)
						// speedie probably would only need like 8MB even then. Quite small.
	|uint64| 		Const
	
	function Reg (|asmreg|)
		nil safe
		return .reg
	
	function FileNum (|int|)
		return .Location & 0x4095
	
	function BytePos (|int|)
		return .Location >> 12
		
	operator isa (|int| m, |bool|)
		nil checker
		if self
			return m == .op
	
	syntax append (|asmreg| flags)
		real self
		.reg = .reg as flags

	syntax is (|asmreg| flags, |bool|)
		if self
			return .reg & flags
	
	function BitCorrect (|&FATASM|)
		.reg = .reg as AsmReg.BitCorrect
		return self
		
	function dest (|int|)
		
	function dest (|int| a, assigns:|asmreg| r)
		
		
	function prm (|int| a, assigns:|asmreg| r)
		

	function a1 (|uint|): return .r[0]
	function a1 (assigns:|uint|): .r[0] = value
	function a2 (|uint|): return .r[1]
	function a2 (assigns:|uint|): .r[1] = value
	function a3 (|uint|): return .r[2]
	function a3 (assigns:|uint|): .r[2] = value
	function a4 (|uint|): return .r[3]
	function a4 (assigns:|uint|): .r[3] = value
	function a5 (|uint|): return .r[4]
	function a5 (assigns:|uint|): .r[4] = value

	function Swap (|int| a, |int| b)
		swap (.r[a-1]) (.r[b-1])

	function Swap (|&FatASM| other, |bool|)
		|| s = self|&ivec4|
		|| o = other|&ivec4|
		swap (s++[]) (o++[])
		swap (s[])   (o[])
		
	
	helper Step (|int| dir, |&FatASM|)
		real self
		|| b = .blocknum
		while
			self += dir
			if .op != asm.noop
				return (self, nil)(b == .BlockNum)
		
	function Prev (|&FatASM|)
		pragma inline
		return .step(-1)
		
	function Next (|&FatASM|)
		pragma inline
		return .step(1)

	function match3_2 (|int| reg, |bool|)
		// prefers the value to be at 3.
		if reg == .a2
			.swap(2,3)
			return true
		return reg == .a3
			
	
	function Renda (|FastString| fs)
		opt norefcounts
		|| op = instruction.typelist[.op]		#debug_require
		fs <~ op.name
		fs <~ ':'
		fs <~ (' ', 5-op.name.length)
		|| GotAny = ""
		|| Remain = 25
		|| f = op.sizes
		for i in f.count
			|| bs = f[i].bitsize
			if remain > 0 and bs
				fs <~ gotany
				gotany = ", "
				if f[i].isreg
					fs <~ 'r'
				fs <~ .r[i]
				remain += bs

	function Print
		visible
		if asm.NoisyASM >= 3
			|| fs = faststring()
			.Renda(fs)
			printline fs

 
 
