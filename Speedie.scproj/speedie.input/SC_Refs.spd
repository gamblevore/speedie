function Message.RefDisappears (|bool|)
	opt norefcounts
	if .func == @func
		self = .parent // sigh
	for (P.up in self)
		|| f = p.func
		if (f == @Type)
			|| D = P.AsDecl
			if !D
				debugger, return nil
			if !D.IsNormalObject
				return true
		  elseif p.RefTransparent
			0 // go up
		  elseif f == @prm
			return false
		  elseif f == @brel
			return true // !obj
		  elseif f == @tmp // if/while
			|| T = p.asmtype
			return T != asmtype.kreturn and asmtype.krejoin 
		  elseif (F == @arg)
			return true // right?
		  elseif (f == @rel)
			|| comp = P.second!.obj
			if (comp isa SCOperator)
				return (comp Is Compare and comp isnt custom)
			return false
		  else
			return false


