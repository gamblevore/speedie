function RefDecr (|Message| msg, |Message| place, |int| Basis, |bool| IsReturn)
	// a = nil   ->   JB_decr(a),  a = nil 
	opt norefcounts
	
	|| OldPrev = place.Prev
	if (OldPrev) and (OldPrev == @Func) and (OldPrev.first ~= "JB_SafeDecr")
		place = OldPrev // safedecr always comes last
	
	using place.refmsgtouse
	|message| what 
	if basis & kBasisCArray
		what = DecrMulti( msg.parent!.asdecl!, msg.copy, IsReturn )
	  else
		what = RefDecrMsg( msg, IsReturn )
	if place == @arg
		place <~ what
	  else
		place.Prev = what


function DecrMulti (|scdecl| d, |message| m, |bool| IsReturn,  |message|)
	opt norefcounts
	|| Int = d.c_array.msg
	int.obj = typeint!.typenormal // nice
	if IsReturn
		rz = macros.MultiEarlyDecr.run(m, Int)
	  else
		rz = macros.MultiDecr.run(m, Int)
	rz.ASMType = ASMType.kRefCount
	|| prm = rz.second
		if IsReturn
			prm.obj = Compiler.RefEarlyDecrMulti
		  else
			prm.obj = Compiler.RefDecrMulti
		rz.obj = typevoid


function RefDecrMsg (|Message| msg, |bool| IsReturn, |Message|)
	if IsReturn
		return RefMsg( msg, "JB_EarlyDecr", Compiler.RefEarlyDecr! )
	return RefMsg( msg, "JB_Decr", Compiler.RefDecr! )
	


