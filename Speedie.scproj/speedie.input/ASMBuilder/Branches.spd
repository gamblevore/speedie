function FoundReg (|message| All, |int| R, |bool|)
	opt norefcounts
	all = all.Declable
	
	if all == @thg or @num // nums can be hoisted
		|| d = all.FastDeclSafe
		if d is local
			|| v = d.WholeType
			if v.reg == r
				return true
		
	for s.fast in All
		if .FoundReg(s, r)
			return true


