
extend_module ASM
	helper TestASMSub (|message| tests)
		opt norefcounts
		|| list = tests.last(@arg)
		|| testname = tests[@thg]
		require list and testname

		textassembler.assemble(list)
		|| fn = TreeAssembler[testname]
			|| ff = fn.finish.run

	function TestASM 
		.enc1
		require options.makeasm
		|| dev = app.pref("dev").int
		if dev >= 2
			asm.noisyasm = 3
		if asm.noisyasm >= 3
			.Listinstructions

		require dev > 0

		using ErrorSeverity.Warning
			|| T = ( file://syntax.asm ).parse[@tmp, "tests"]
				.TestASMSub(T)
	

function message.GetASMFunc (|message|)
	opt norefcounts
	if .reg >= 0
		|| op = .next(@opp, "=")$
		|| Adj = op.Next(@adj)$
		return adj[@func]


extend_module SCFunction
	function LinkAll (|[scfunction]| Funcs)
		opt norefcounts
		for fn in funcs
			if fn.MyReacher
				.Link(fn)

	function Link (|SCFunction| fn)
		opt norefcounts
		// so... this will be the ACTUAL link.
		// as in the one that the run-time loader will do!
		|| mu = fn.asm$


function IR.Encode (|ASM|)
	return (ASM.encoders[.op]!)(self)		

	
function @asm.Enc1
	|IR| R
	R.op = ASM.DSUB
	R.r[0] = 3
	R.r[1] = 2
	R.r[2] = 1
	R.Rest = 0
	|| oof = R.Encode
