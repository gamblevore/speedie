

datatype FailableInt (int) // useful when you want most numbers, even negatives, and zero but still want AN error code
	constants
		|int| 
		Fail = 0x8000_0000
	default FailableInt.fail
	false   FailableInt.fail
	syntax cast (|bool|)
		return self != fail|int|


function message.ASMDecl (|SCDecl!|)
	opt norefcounts
	rz = .fastdecl
	if rz.typeonly == datatypecode.unusedtype
		rz.wholetype = rz.CalculateASMType|datatypecode|
	target debug: rz.ASMSanity


function scfunction.GenASM
	opt norefcounts
	|SC_Hoister| H 
	asmtype.ArgSub(ASMState.Sh, .SourceArg!, H)
	h.Unhoist


function message.OperatorMul (|asm| op, |&fatasm|)
	cpp_part RequestOp
	|| a = ASMState.sh
	|| p = a.Curr
	if p < a.End
		p[0] = nil
		a._curr = p + 1
		P._op = op
		p.debug = self
		p.BlockNum = a.BasicBlock
//		if p ~= 12345
		return p
	error (self, "Function too large (over 64K)")
	return a.start



