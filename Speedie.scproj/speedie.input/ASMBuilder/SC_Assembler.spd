			return f.ASM					#expect (m, "This function has no ASM")

	
	function CollectFuncs (|string| exp, |[scfunction]|)
		opt norefcounts
		for l in exp / ','
			|| fn = compiler.XFunc(l)
				rz <~ fn
				fn.tableid = rz.length
			
		
	function VakPak (|[scfunction]| list)
		opt norefcounts
		require ASMState.Sh.PackMakerInit // and fn_asm_table[@arg]
		
		for fn in list
			require .Vacuum(fn)
			

	function Vacuum (|SCFunction| fn, |bool|)
		opt norefcounts
		
		if .VacuumReal(fn)
			return true
		if ASMState.ExpandJSM
			return .VacuumReal(fn)


	function GenerateASM (|scfunction| fn)
		opt norefcounts
		ASMState.Sh.Initstate(fn)
		|| fp = fn_asm_table[@arg]!
		|| R = asmreg()
		|| A = fn.SourceArg!
		(fp)(ASmState.Sh, A, R)
		ASMState.Sh.FinishASM


	function Optimise (|bool|)

	
	function FlowControl (|bool|)

	
	function VacuumReal (|scfunction| fn, |bool|)
		opt norefcounts
		.GenerateASM(fn)
		while .Optimise
		.FlowControl
