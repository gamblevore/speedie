	function FatASM.FixConst
		|| V = .r[1]|uint64| << 32
		V |= 0
		|| Inv = V|uint64|.countbits > 32 
			V = ~V
		|| R = (~V|uint64|).LongestBitStretch	// longest false-stretch
		if r.x >= 50		// OK so we have the longest stretch in r.x
			V = V rotl 63-r.y
			.r[2] = inv|int|
			.r[3] = V|int|
			return
*/

//	debugger
// numbas coming out wrong...

	|asm| o = .op
	|| k = .const
	|| inv = k>>63
		k = ~k
	require curr and curr < after+2
	|| sh = 0
	if k >= 1|uint64|<<17
		if k < (1|uint64|<<49)
			sh = 32
			o = asm.knst2  // 1 extra
		  else
			sh = 64 // obliterate
			o = asm.knst3  // 2 extra
	|| rz = o << 24
	rz.R1 = .R[0]
	rz.ConstStretchy_Inv = inv
	rz.ConstStretchy_Value = k<<sh
	Curr++[] = Rz
	if sh >= 32
		if sh == 64
			curr++[] = k>>32
		curr++[] = k
			
	return Curr


extend asmstate
	function NumToReg (|int64| V, |message| exp, |asmreg| Reg=asmreg(), |asmreg|)
		Reg = .TempMe(exp, Reg)	
		|| fat = exp.KNST(reg, 0, 0, 0, 0, 0)
		fat.Const = v
		return fat * reg

	function f (|asmreg| r, |f64|)
		|| p = .GetConst(r)
		if r.fourbytes
			return p|&float|[]
		return p|&f64|[]


