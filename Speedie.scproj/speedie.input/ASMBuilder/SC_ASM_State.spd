	function IsASMConst (|message| exp, |bool|)
		|| fn = exp.func
		if fn == @num
			return true
		if fn == @thg // now what?
			return ASMType.ThgSub(self, exp, ASMReg.ConstRequest)
	
	
	function CanReuseParam (|message| Prms, |asmreg| Dest, |scdecl| A, |int| vr, |bool|)
		opt norefcounts
		if a isnt altered
			return true
		require (dest.reg == vr)
		for p.fast in prms
			// check for the address of the same var?
			if .ExistingVar(p).reg == vr
				require !rz
				rz = true
	
	
	function TryInline (|message| prms, |asmreg| dest, |µFunc| A, |int| AllowedGain,  |asmreg|)
		opt norefcounts
		|| fn = A.fn
		|| OldFunc = .fn
		|| OldDest = .ReturnDest
		|| OldStart = .VDeclsInlineStart
		|| OldBranchDepth = .BranchDEpth
		if !dest.reg and fn.ReturnType
			if dest is discard
				debugger // hmm?
			  else
				Dest = .TempOnly(prms, dest)
		
		if dest isnt ExitFunction
			.TailInlineable = false
		  elseif .InlineDepth == 0
			.TailInlineable = true
		
		.InlineDepth++
		.fn = fn
		dest.tmpcheck
		dest = dest.simplify
		dest.µtype = fn.RegType
		dest.TmpCheck
		.ReturnDest = dest
		.VDeclsInlineStart = .vdecls
		.branchdepth = 0
		
		rz = .TryInlineSub(prms, dest, A, AllowedGain)

		.InlineDepth--

		.fn = oldFunc
		.ReturnDest = Olddest
		.VDeclsInlineStart = oldstart
		.branchdepth = oldbranchdepth
	
	
	function TryInlineSub (|message| prms, |asmreg| dest, |µFunc| µ, |int| AllowedGain,  |asmreg|)
		opt norefcounts
		|| fn = µ.fn
		
		|fatrange| LL
		LL.Start = .curr
		.InlineParameters(prms, dest)
		|| RealStart = .curr // params need to be done anyhow... so don't count them.
		fn.GenASM
		.RestoreParameters
		ll.after = .curr
		|| Result = .InlineFinish(ll, dest&asmreg.exit)
		|| Grown = .CurrGain(RealStart)
		if Grown <= AllowedGain
			return Result
	
	
	function InlineParameters (|message| prms, |asmreg| dest)
		opt norefcounts
		|| p = prms.first
		
		for a in .fn.Args
			|| v = .ExistingVar(p!)
				|| vr = v.reg
				if .CanReuseParam(prms, dest, a, vr)
					|| f = v.fat
					|| T = a.WholeType.reg(vr)
					a.DataType = t|datatypecode|
					(a is param) = (v is param)
					(a is body) = (v isnt param)
				  else
					v = nil
			
			if !v
				v = .DeclareMe(a.source, a)
				v = .µInto(p!, v as asmreg.DeclareInlineParam)
			.MakeConstFromASM(a, V, nil)
			p++
	

	function RestoreParameters
		opt norefcounts
		for a.backwards in .fn.Args
			.MakeConstFromASM(a, nil, nil) // parameters can never be const anyhow
			a.fatconstindex = 0
			a.paramfix

	
	function CurrGain (|&fatasm| Start, |int|)
		|| C = .curr
		while Start < C
			rz += start.exists
			start++ 
			

	function AskForInline (|message| prms, |asmreg| dest, |SCFunction| fn, |asmreg|)
		opt norefcounts
		|| A = fn.ASM
		require .InlineDepth < 8
		require A and !fn.HasCVersion
		|| AllowedGain = 5 + (fn is inline) * 24		// assume that functions have 5 instruction overhead.
		
		|| Grace = 9
		for p.fast in prms
			Grace += .IsASMConst(p)<<2
	
		require (allowedGain + Grace) > a.length
	
		|| Start = .curr
		|| I = .TryInline(prms, dest, A, allowedgain)
			return I
		.Rewind(start)
	
			

	
function SCFunction.HasCVersion (|bool|)
	if .isstdlib
		return true
	require self is wrapper

	if .IsCppInBuilt == 1	// cpp_inbuilt. These normally have no address? but perhaps we made a wrapper for it in the exec? we should check if it still exists.
		debugat
		return true

	if .IsCppInBuilt == 2	// cpp_nothing: cpp_spd might sound better?
		debugat
		return false // need to be replaced with ASM intrinsics.

	if self Is ExternalLib	// cpp_libwrapper ?   // Speedie_Main in perry, counts as one!
		debugat
		return false  // i think only perry used this and only in debug mode within Xcode

	return true



function asmstate.RegsBitClear (|message| exp, |int| RegAddrs, |scfunction| fn)
	opt norefcounts
	for (b.bits in RegAddrs) (i)
		|| arg = fn.args[i]
		if arg and arg.PointerCount == 1
			|| in = arg.Internal
			if in and in.IsNormal and !in.IsFloat
				|| S = 64 - in.SizeOfQuery
				if S >= 0
					exp.BFLG(i.asm, i.asm, S, S, 0)


function @ASMType.ASMFunction (fn_asm) // dofunction function
	opt norefcounts
	|| prms = exp.last!
	|| fn = prms.AsFunc!
	
	|| MiniDest = .AskForInline(prms, dest, fn)
		return MiniDest
	dest = .CallFunc(exp, dest, fn)
	if !fn.returntype
		(dest is constoutput)
	
	|| Closer = .OpenVars
	|uint| RegAddrs
	|| P = .PrmCollect(prms, fn, RegAddrs)
	.CloseVars(Closer)
	
	|| ID = fn.TableId + 31
	|| PExt = P >> 32
	if !PExt and (dest is ExitFunction) and !fn.HasCVersion
		return prms.TAIL(ID, P) * (dest as asmreg.exit)
	
	// OK... So when Inline_Branch1 calls hhhMaybeConst,
	// the first const is removed, so there is only one remaining return point
	// from that, we can simply allow the returner, to use whatever reg it wants
	// this allows us to NOT use a BOR instruction to move the result.
	// we could perhaps even better... simply do a post-sweep. seems better
	// or else we'll be figuring everyhting out, forever.
	
	|| fat = prms.FNC(dest, ID, P,  PExt)
	if fn.HasCVersion
		fat._op = asm.FNCX
	fat._op += PExt > 0
	
	if RegAddrs
		.RegsBitClear(exp, RegAddrs, fn)
	
	if "Inline_Branch1".trap
	fat.µrefcount += fn isnt stateless
	(dest is Exit) = fn is Killer
	return fat * dest


