	function fatasm.JumpImprove (|bool|)
		|| D0 = .jumpto!
		|| D = D0
		|| n = 0
		while d isa asm.jump
			d = d.JumpTo!
			expect (++n < 30) (.msg)
		
		if  (d isa asm.ret or d isa asm.tail)  and  (self isa asm.jump)
			.CopyFrom(d) // always jumping into an exit.
			return true
		
		if D!=D0 // faster jump
			.JumpTo(D, ASMState.sh)
			return true
		

	
