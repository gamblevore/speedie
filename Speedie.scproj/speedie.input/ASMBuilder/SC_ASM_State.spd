	function OpenVars (|uint|)
		rz = (.VDecls|uint| << 8) ||| (.vtmps << 0)
		
	function CloseVars (|uint| V)
		|| top = .vdecls
		|| d = (v>>8)&255
		while top > d
			.Vars[top] = nil
			top--
			
		.VDecls = d
		.VTmps = v&255
			
	function AddFuncParams (|SCFunction| fn)
		opt norefcounts
		for a in fn.Args
			(a is param) // reset
			.DeclareMe(a.source, a)
	
	function Index (|int|)
		return ._curr - .start
	
	function Last (|&FatASM|)
