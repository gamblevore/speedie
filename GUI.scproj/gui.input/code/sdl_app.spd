		cpp_Wrapper SDL_Delay


	function Quit
		.saveprefs // in case we crash during quit
		for w in __modules__.window.all
			w.close(kExiting)
		.saveprefs
		.sdl_quit

	
	function FileDroppedIntoApp (|window| w, |string| path, |CopyPasteFlags| p)
