	function RunAndQuit (|GUIApplicationInit| fn, |object| Anything=nil,  |ivec2| size=(414, 256))
		target !gui
			disabled `Put "targets gui" in the app's conf section to use this!`
		
		.Init(size)
		(fn)(anything)?
		while .SingleFrame
			.PostLoads
		.quit

	
	helper PostLoads
		opt norefcounts
		|| s = .TryResizeLater
			.TryResizeLater = nil // clear... in case of inf loop
			.SizeOrig = s

		for w in window.all
			if !w.PostLoaded
				w.PostLoaded = true
				w.__PostLoad__


