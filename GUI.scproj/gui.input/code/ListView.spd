	function Select (|ListViewRow| s, |int|Mode=0)
		// 0  == normal
		// 1  == fast
		// -1 == noshow 
		opt norefcounts
		require s != .ListSource
		require !s or .owns(s)
		
		.ExpandParents(s)
		|| Modified = 0
		for r.all in self
			modified += r.ChangeSel(r == s)
		
		if modified or .AlwaysSendChangeEvent
			.SelChangeEvent(s, mode < 0)
		if Mode >= 0
			.show(s)
			if Mode == 1
				.scrolljump

	
