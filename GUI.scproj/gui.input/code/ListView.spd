	function DistBetween (|ListViewRow| c, |ListViewRow| b, |int|)
		opt norefcounts
		|| a = c
		while a
			if a == b
				return rz
			a = .Hiernext(a)
			rz++
		a = c
		rz = 0
		while a
			if a == b
				return rz
			a = .Hierprev(a)
			rz--


