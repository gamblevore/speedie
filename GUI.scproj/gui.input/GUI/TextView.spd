	helper FindDrawInfoSub2 (|int| Char,  |$int| VLine,  |TextViewLine!|)
		opt norefcounts
		char = .clamp(char)
		|| c = -int.max
		|| s = .StartLine
		|| d = .needfirst
		
		while
			|| n = d.next
			if d == s
