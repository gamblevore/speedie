	helper Parse (|bool| Changed, |int| expect, |message|)
		cpp_Part ViewParseSub
		if !.WillAttemptParse(expect)
			.myerror = nil // more reliable
			return nil
		
		|| p = .ParsedMessage
		if p and !changed
			return p
		|| sel = .SelRange
		if !sel.width and sel.x > 0
			parser._DotInsertAllow = true

		p = .ValidateNewText
		
		if expect <= textview.AllowJeebox
			.myerror = nil
		return p


