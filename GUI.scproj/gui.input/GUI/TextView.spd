	helper string.GUITabIndent (|int| n, |string| mark, |faststring| fs)
		if mark != "\t"
			if n < 0
				fs <~ self
				return
			fs <~ mark
			fs <~ self
			return

		|| br = .FindTabInfo
		if br.y
			fs <~ '/'
		if br.x&3==1
			br.x = (br.x-1).AlignUp(4)
		br.x += n*4
		br.x = br.x max 0
		fs <~ ('\t', br.x/4)
		fs <~ (' ', br.x&3)
		fs.AppendRange(self, br.z)

	
	helper TabIndentAll (|int| dir, |string| mark, |string| txt,  |string|)
		|| fs = faststring()
		|| curr = -1
		while curr < txt
			|| next = txt.find(jeebox.csline, curr+1)
			if !next
				next = txt.length
			
			|| l = txt[curr+1, next]
			l.GUITabIndent(Dir, mark, fs)
			curr = next
			|| ch = txt[curr]
				fs <~ ch
			
		return fs
	

