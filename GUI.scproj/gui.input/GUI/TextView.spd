	helper InsertSub (|string| s, |intrange| p, |bool| selnew=false, |bool|show=true, |int|)
		p = .clamp(p)
		|| Same = (p.width == s.length) and self[p.x, s] 
		|| i	= (p.x + s.length, p.x2)(!Same)
//		if show
