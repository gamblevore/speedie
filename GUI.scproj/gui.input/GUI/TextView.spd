	helper EndGap (|bool|)
		opt norefcounts
		require .PreferStayAtEnd
		// surely this should start from the ._Start?
		// it woudl be faster?
		// we go from the end down to the start, right?
		// but the end may be far away.
		|| curr = ._lines.last
		|| lim = .MaxVisibleLines
		|| rz = 0
		while curr != ._start
			require curr and rz < lim
			curr--
			rz++
		return true


	helper PrepareLinesOfText 
		opt norefcounts
		|| Changed    = .NeedsPrepare						#require
		.TextAlteredForDraw = 0
		|| expect	  = .FindExpectsParse
		|| msg   	  = .Parse(changed >= 2, expect)
		|| ParsedOK   = (msg!=nil) or (.ExpectsParse <= AllowJeebox)
		|| Pos	 	  = .StartPos
		|| d		  = .NeedFirst
		|| StayAtEnd  = .EndGap
		._LineNumWidth = (.text.TextLineCount.LineNumWidth, 0)(.ShowLineNumbers or Expect >= 3)
		
		|int| CharW	= ._LastDrawWidth - ._LineNumWidth
		if .SingleLine
			charw = 4KB
	
		|| ARGH = 0 // .ReclaimRestart(d) // disabled for now.
		|| t = d.tline
		|| p = d.position // surely that is always 0?
		(._Lines isnt breakpoint)
		
		while
			p = d.FindWhereLineBreaks(.text,  CharW,  .singleline!=0,  p)
			t = d.InitDefaults(self, t)
			if expect >= allowJeebox // didn't I use to have it on allowjeebox?
				msg = d.colorise(msg, ParsedOK)
			if d is breakpoint
				(._Lines is breakpoint)
			loop p >= 0
			|| n = d.next
				
			if  true  or  !n  or  n.position < ._reclaim[1]
				d = .nextvline(d, d, p)
			  elseif p < ARGH
				d = .NextVline(d, nil, p)
			  else
				d = d.ReclaimEnd(t, ._reclaim[2])
				exit

		.EndPrepare(d, StayAtEnd, pos)
		if changed == 1 // size changed
			.ScrollPos = pos


	function EndPrepare (|TextViewLine| d, |bool| StayAtEnd, |int| pos)
/		opt norefcounts
		(pos)
		d.RemoveAfter
		._PreferPrevLine = false
		if StayAtEnd
			|| n = 1 - .MaxVisibleLines
			|| D2 = d.movecapped(n)
			.StartWithoutScrollDraw(D2)
		  else
			.StartWithoutScrollDraw(._Lines.first!)
		.ClearReclaim	
	
	
