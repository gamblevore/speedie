	helper RowBounds (|ListViewrow| curr, |ListViewrow| find, |int| add, |ivec4|)
		opt norefcounts
		require find
		
		|| s	= .ActualRect
		|| low	= s.y1
		|| top	= s.y2 + .scrollshift - .rowheight
		while curr != find
			top -= .rowheight
			require (curr) and (top >= low)
			curr = .hiernext(curr)
		return (s.x, top, s.x2, top + add)


