	helper NeedFilter (|textview|)
		opt norefcounts
		rz = .TypingFilter
		if rz
			return rz
		rz = TextView(Self)
		.Typingfilter = rz
		rz.id = "filter"
		rz.gnormal.bg = vec4(0.1, 1.0).px
		rz.gnormal.edge = .gnormal.edge
		(rz is editable)
		rz.OnKeyDown = RefilterKeyDown|guikeyevent|
		rz.OnTextChanged = textview.Refiltertextchange
		rz.SingleLine = textview.SingleLine
		rz.size = the~width by (15)~down
	
	
	behaviour TypedString
		opt norefcounts
		if .OnTypingFilter
			|| t = .NeedFilter
			|| w = .window
				t.TypedString(input)
				w.SetInnerFocus(t)
				return .UpdateFilter


	helper UpdateFilter (|bool|)
		opt norefcounts
		|| t = .OnTypingFilter
		|| tf = .TypingFilter
		require t and tf
		(t)(self, nil, tf.text)
		.touch
		if self isa menu
			.Sizer.g(1, self) = .DesiredHeight~long
			.sizer.g(2, self) = .CmmWidth(nil)~long
		if .SelectableCount == 1
			.SelectFirst
		
		return true
	
	
	behaviour KeyDown
		opt norefcounts
		if .KeyDownTest(key) or (.OnKeydown)(self, key)?
			.editdelayed = nil
			return true
			
			
	helper KeyDownTest (|keys| key, |bool|)
		if (key is INSERT or Enter)
			.rename
			return true

		if key.IsAccept
			return .PressReturnKey
		
		if key.iscancel
			if .DraggingRowFrom
				.DraggingRowFrom = nil
				._DraggingRowTo = nil
				return true
			if .ClearSearch
				return true
			if keys.shift
				return .rename
			
		if .OnRightClick and (key.IsCmm)
			.menuforselrow
			return true
			
		if (key iscmd keys.A)
			return .SelectAll
		if (key is PAGEUP)
			.ScrollByRows(-.VisibleRows+1)
			return true
		if (key is PAGEDOWN)
			.ScrollByRows(.VisibleRows-1)
			return true
		if (key is HOME)
			.slidescroll = .start
			return true
		if (key is END)
			.slidescroll = .end
			return true
			
		if key is up or down
			|| d = int.max
			if keys.Cmd
				.SelectMove( (-d, d)(Key is up) )
			  elseif !.FirstSelected
				.SelectMove( (-d, d)(Key is down) )
			  else
				|| i = 1
				if keys.option: i = .VisibleRows/2
				if key is up
					i = -i
				.SelectMove(i)
			return true
		
		if .IsTree and (key is left or right)
			return .openorclose(key)

	
	function DefaultCopy (GUICopyEvent)
		|| fs = faststring()
		for s.listsel in self
			|| it = s.__copyid__
			it ?= s.DisplayName
			it ?= s.name
			if fs.length
				fs <~ '\n'
			fs <~ it
		return fs


	helper CopyList (|array of string|)
		opt norefcounts
		.EditDelayed = nil
		.clearinternaldrops
		for s.listsel in self
			|| it = s.__copyid__
				rz <~ it

	
	function IsEmpty (|bool|) // similar: hasany, rowcount
		return !.listsource.hasany
	
	
	function JumpTo (|string| s, ||)
		opt norefcounts
		|| it = .partialfind(S)
			.select(it)
		
		
	helper PartialFind (|string| s, |listviewrow|)
		opt norefcounts
		for r.toplist in self
			if listview.pf(r.name)[0, s]
				return r


	function VisibleRows (|int|)
		|| h = .height + .scrollshift + (.RowHeight - 1)
		|| r = .RowHeight
		return h / r
	

	function FullyVisibleRows (|int|)
		return .height / .RowHeight


	helper VisibleRowsGap (|int|)
		|| m = .FullyVisibleRows
		if m == 5
			return 4
		if m > 5
			return m - 2
		return m
		

	function EnableDrag
		.OnDragRow = (nil, &BasicRowDrag)(.istree)
	

	helper CursorForRow (|listviewCell?| c, |systemcursor|)
		opt norefcounts
		rz = SystemCursor.Arrow
		if c and self isa menu
			rz = SystemCursor.Hand
			|| r = c.row
			if (r is disabled)
				if rz == SystemCursor.hand
					return SystemCursor.arrow // degrade to arrow, rather than all the way down.
				return SystemCursor.no
			  elseif (r is editable)
				if r is Selected
					// should only be if this is CURRENLTY editing!
					return SystemCursor.IBeam
				return SystemCursor.hand
		
	
	behaviour MouseMove
		|| c = .FindClickedCell(P)
		.cursorforrow(c).use
			
		if ._CanSeeAllLines
			.NoScroll
			return .HasFocus

		return .MouseMoveInScrollArea(P)
	
	
	behaviour LostFocus
		.InlineCell.clear(false)?
		.clearinternaldrops
		super.lostfocus
	
	
