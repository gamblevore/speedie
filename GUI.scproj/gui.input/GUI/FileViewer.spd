		function FileRowScoreSorter (SorterComparer of FileRow)
			opt norefcounts
			if b.rangelength == .rangelength
				|| aprj = .InMainProj
				|| bprj = b.InMainProj
				if aprj == bprj
					return FileRowNameSorter(self, b)
				return bprj - aprj
				
			return b.rangelength - .rangelength

		function FileRowNameSorter (SorterComparerFileRow)
			opt norefcounts
			|| c = b.asdir - a.asdir
				return c
			return A.name.syntaxcompare(b.name, true)

