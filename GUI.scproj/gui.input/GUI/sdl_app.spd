	helper TrySelectorFlash
		if !.IsBackground and (sdlapp.ChangeSelFlash.fired)
			.FlashSelector = !.FlashSelector
			.Touch
			if .ChangeSelFlash == 1
				.FlashSelector = true
			sdlapp.ChangeSelFlash = date.now + 1s


