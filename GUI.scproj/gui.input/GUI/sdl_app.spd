	function Run (|errorint|)
		target !gui
			disabled `Put "targets gui" in the app's conf section to use this!`
		app.ClearCaches
		|uint| n 
		while .SingleFrame
			if n++ isa 512
				app.ClearCaches //  :)
		.Quit
		
		if !StdErr.OK
			return 1

	
	helper PostLoads
		opt norefcounts
		|| s = .TryResizeLater
			.TryResizeLater = nil // clear... in case of inf loop
			.SizeOrig = s

		for w in window.all
			if !w.PostLoaded
				w.PostLoaded = true
				w.__PostLoad__


	function MouseXY (|ivec2|)
		|| x = 0,  || y = 0
		SDL_GetMouseState(&x, &y)
		return (x,  y).sdlxy
		
		
