helper ListView.SLH (|vec3|)
	opt norefcounts
	|| Total = 0
	|| Found = 0
	|| ff = ._Scroll
	for r.all in self
		if r == ff
			Found = Total
		++Total
	|| L = (1 + Total - .visiblerows) max 0
	return (Found,  L,  .rowheight).vec3

 
helper textview.SLH (|vec3|)
	opt norefcounts
	|| s = .StartLine
	|| ll = ._lines.last!
	|| n = ll.vline - (.maxvisiblelines - 2)
	return (s.vline,  n max 1,  .lineheight).vec3



