inline String.Unescape (|string|)
	return .ReplaceAll( Jeebox.UnEscapeStr! )

inline String.Escape (|string|)
	return .ReplaceAll( jeebox.EscapeStr! )

inline String.EscapeChr (|string|)
	return .ReplaceAll( jeebox.EscapeChr! )

