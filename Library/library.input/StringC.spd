// quite useful for calling unix functions...
class StringZeroTerminated (string)
	linkage
		wrapper
		cpp_class JB_StringC
		cpp_part Str
		visible true
	cpp_refs
		Disturbs		nil
	false			""
	default			""
	function CString (|cstring|)
		return .addr|cstring|
	
	syntax cast (|cstring|)
		return .addr|cstring|

