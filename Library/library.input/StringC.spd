// quite useful for a lot of things...
class StringZeroTerminated (string)
	linkage
		wrapper
		cpp_class JB_StringC
		cpp_part Str
		visible true
	cpp_refs
		Disturbs		nil
	default			""
	syntax cast (|cstring|)
		if self != nil
			return .addr|cstring|

	module
		function new (|cstring| s, |StringZeroTerminated|)
			cpp_Wrapper JB_StrC
		function new (|cstring| s, |int|n, |StringZeroTerminated|)
			cpp_Wrapper JB_StrCN
