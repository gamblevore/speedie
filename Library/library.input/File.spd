	function string.Out (|bool| Clear=true, |Faststring|)
		description "Lets you write to a file, via a faststring object." 
		|| f = .file
		if Clear
			if !f.ispipe // we don't close pipes!
				f.close
				require f.openempty
		  elseif !f.opened
			require f.open
				
		rz = FastString()
		rz.file = f

	function string.In (|string| Header="", |int| ChunkSize=4MB, |InputStream|)
		description "Reads from a file, via a InputStream object. Useful because InputStream can read from files, strings, and more. Write code once and use it on multiple input-sources." 
		|| f = .file
		if f.mustexist("stream")
			rz = InputStream(f, chunkSize)
			if !rz.HasHeader(Header)
				rz = nil
	
