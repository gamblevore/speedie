	function string.UniqueFile (|file|)
		|| f = .file
		if !f.exists
			return f
		return f.Parent.UniqueChild(.name)
			
		
	function UniqueChild (|string| name, |file|)
		|| test = name
		for 1000
			|| ch = .child(test)
			if !ch.exists
				return ch
			test = name + (random.shared.int&0xFFFFFF).render
			
	
	
	function DeleteAll (|ErrorInt|)
		if super == "/" or ""
			return -1
		if .IsDir
			for C.Files in self
				|| tmp = C.DeleteAll
				if rz == 0
					rz = tmp
		|| tmp2 = .Delete
		if rz == 0
			rz = tmp2


