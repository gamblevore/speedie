	function DeleteAll (|bool| KeepSelf=false, |ErrorInt|)
		if super == "/" or ""
			return -1
		if .IsDir
			for c.files in self
				if c.IsSymLink
					c.Delete
				  else
					|| tmp = C.DeleteAll
					if rz == 0
						rz = tmp
		if !KeepSelf and rz == 0
			rz = .Delete

