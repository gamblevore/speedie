	function Parse (|int| lim = 16MB, |bool| AllowMissing=false, |syntax| Owner=@nil,  |messageroot|)
		// normally allowmissing is good, but here it is bad.
		// file.parse keeps track of the source+path
		|| S = .ReadAll(lim, allowmissing)
		s = s.Decompress(lim, nil)
		if s
			(Message).CreateLayerAndUse(self, s) 
			rz = S.parse(owner, false) // already decompressed.
			(message).restore

	
