datatype FileMode (int)
	constants
		|FileMode|
		Owner   = 7<<6
		Group   = 7<<3
		Other   = 7<<0
		CanExec = 1<<6  + 1<<3 + 1<<0
		Process = Owner + 5<<3 + 5<<0
		Data    = 6<<6  + 4<<2 + 4<<2


