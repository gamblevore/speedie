	function Compare (|File| A, |bool|)
		cpp_part FileCompare
		require (.Size == A.Size)
		.Open(O_RDONLY)
		A.Open(O_RDONLY)
		
		while {
			|| S_ = .Read(64K)
			|| SA = A.Read(64K)
			require (S_ == SA)
		} (S_)
		
		.Close
		A.Close

		return true

	
	function Compare (|String|S, |bool|)
		return (.Size == S.Length) and (.ReadAll(true) == S)

	
