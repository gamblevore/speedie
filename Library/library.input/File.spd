	function DeleteAll (|bool| KeepSelf=false, |ErrorInt|)
		if super == "/" or ""
			return -1
		if .IsDir
			for C in self.ListFiles(true)
				|| tmp = C.DeleteAll
				if rz == 0
					rz = tmp
		if !KeepSelf and rz == 0
			rz = .Delete


