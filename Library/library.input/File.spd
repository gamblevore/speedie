	function CopyAll (|string| Dest, |bool| AttrOnly=false, |ErrorInt|)
		if !.isdir
			return .copyto(dest.file, AttrOnly)

		for n in self
			|| s = self[n]
			|| d = dest[n]
			rz = s.copyall(d) 
			if !rz
				exit
	
	
	function ListFiles (|int| Mode=file.AllowSymLinks, |[file]|)
		return .list(mode|||WantFileObjects)|[file]|
	
	
	function List (|int| Mode=file.AllowSymLinks, |[string]|)
		flow off
		
		for name in self
			if (Mode&AllowInvisible) or (name[] != '.')
				|file| ch
				ifn mode&AllowSymLinks
					ch = self[name]
					if ch.IsSymLink
						continue
				if mode&WantFileObjects
					if !ch
						ch = self[name]
					rz <~ ch
				  else
					rz <~ name
		
		rz.sort
		if !flowcontrol.isdisabled
			flowcontrol.input(rz, self)
		
	
