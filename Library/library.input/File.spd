		function SpeedieDir (|string|)
			if !_speedie
				|| paths = app.exepath.parent
				|| srch = "/speedie/"
				|| found = paths.find(srch, 0, int.max, true)
					_speedie = paths[0, found + srch.length]
				  else
					_speedie = "/usr/local/speedie/"
			return _speedie
		
		function Sorter (SorterComparer of file)
			|| aa = .size
			|| bb = b.size
			return bb - aa
			
