			|| f = File( .PathDir + Name.trimstart("/") )
			if (!errs or f.exists)
				return f
			error (Self, "Can't find file/folder: '$name' in '${super}'." )
		error (Self, "No name specified for sub-file of directory: " + self)
	
	
