	function Skip (|int| n=1)
		.offset += n

	iterator
		|| reader = .ListStart
		while ( reader.MoveNext )
			yield reader.CurrChild
		reader.listend

	iterator Files
		|| reader = .ListStart
		while ( reader.MoveNext )
			yield self.child(reader.CurrChild)
		reader.listend
	

