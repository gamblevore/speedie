	function MustExist (|string| operation = "", |bool|)
		if .exists
			return true
		|| fs = faststring()
		fs <~ "File does not exist"
		if super[] != '/'
			fs <~ " at "
			fs <~ app.cwd
		if operation
			fs <~ ", trying to "
			fs <~ operation
		fs <~ " "
		fs <~ super
			
		error (self, fs)

	
