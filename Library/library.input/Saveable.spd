//		for (Obj in self)
//			fs.AppendObjectID(obj)


	constructor ( |&ClassData| Cls, |&int8| Data )
		.cls  = cls
		.data = data

	
	function HasData (|bool|)
		return .data[0]

	
	function Saveable.SaverInfo (|SaverClassInfo|)
		opt norefcounts
		return .Class.saveinfo|Saverclassinfo|


	function Clear
		opt norefcounts
		require self
		for Obj in self
			obj.SaveUnMark // make debugging easier...
		super.clear

		
	function Output (|&ObjectSaver| Saver)
		opt norefcounts		
		|| D = saver.dest
		require d and self
		D <~ '\n'
		for c in .cls.name
			d.AppendByte(c.lowercase)
		D <~ ' '
		
		if (.HasData)
			D <~ '('
			D <~ .data|cstring|
			D <~ ')'
			D <~ ' '
		D <~ "(\n"
		
		for (Obj in self)
			D <~ '\t'
			D.AppendObjectID(obj)
			D <~ ':'
			D <~ '('
			Obj.__SaveWrite__(Saver)
			D.remove(',')
			D <~ ')'
			D <~ '\n'
		D <~ ')'
		D <~ '\n'




