	function PrependAll (|| src)
		opt norefcounts
		while (|| l = src.Last)
			.First = l
	
	function AppendAll (|| src)
		opt norefcounts
		while (|| l = src.first)
			.last = l
	
	syntax Compare (|int| n, |int|)
		return .SlowCount - n
	
	syntax Equals (|int| n, |bool|)
		return .HasChildCount( n )
	
	syntax Equals (|byte| b, |bool|)
		disabled `Did you mean == int, or == "string"?`
	
	
	operator More (|int| N, |bool|)
		disabled "use >" // has more children than N	
	
	operator LessOrEqual (|int| N, |bool|)
		// has N children or less.
		// would be nice if this could directly work from
		// a <= b... and just prefer this over the syntaxcompare.
		
		opt norefcounts
		|| c = .first
		while c
			require n > 0
			--n
			++c
		return true

	
	function Across (||)
		opt norefcounts
		|| n = .next
			return n
		return .parent.next.first

			
	function DeepLast (|...!|)
		disabled "Use .flatlast"

	
	function FlatLast (|...!|)
		opt norefcounts
		real self
		while
			|| l = .last #loop
			self = l
		return self


	function FlatNext  (||)	
		nil checker
		cpp_wrapper JB_Ring_FlatNext0

	function WrapWith (|...!| W, |...!|)
		.Prev = W
		W.first = self
		return W

	function FlatPrev (||)
		opt norefcounts
		|| p = .prev
			return p.FlatLast
		return .parent
	
	function FlatNextDepth  (|$int| Depth, |bool| Down=true, ||)
		cpp_wrapper JB_Ring_FlatNextDepth, nil checker
	
	function FlatAfter (||)
		cpp_wrapper JB_Ring_FlatAfter, nil checker
			
	function IsAncestor (|| root, |bool|)
		disabled "Use inside or contains operator"


	operator inside (|| s, |bool|)
		return s contains self


	operator contains (|| r, |bool|)
		opt norefcounts
		for s.up in r
			if s == self
				return true

	operator In (|list| f, |bool|)
		opt norefcounts
		return .parent == f
		
	function Remove
		.Parent = nil
	
	function ClearTree
		opt norefcounts
		require self
		while (|| f = .first)
			f.ClearTree
			f.remove
				

	function FwdDist (|list!| F, |int|)
		opt norefcounts
		|| c = 0
		while F
			if self == F
				return c
			++F
			++C
					
	operator gt (|list| rt, |bool|)
		return .fwddist(rt)

	operator plus (|int| n, ||)
		disabled ".moveflat or .move?"
	operator minus (|int| n, ||)
		disabled ".moveflat or .move?"
	

	function Move (|bool| fw, ||)
		if fw
			return .next ?? self
		return .prev ?? self
		
	function Step (|bool| fwd, ||)
		cpp_Part stepbool
		if fwd
			return .next
		return .prev
	
	function Step (|int| i, ||)
		disabled "use .move(int) or .step(bool)"
		if i
			return .step(i>0)
		return self

	
	function MoveCapped (|int| n, |...!|)
		|| r = 0
		return .MoveCapped(n, r)
	
	
	// it would be nice to be able to pass "nil" to $int params
	// and have the compiler insert some global to get the address of
	// Objects would suffer refcount issues, so I guess not allowed.
	// or clear after, and before.
	function MoveCapped (|int| n, |$int| r, |...!|)
		cpp_part StepN
		opt NoRefCounts
		real self
		|| p = .parent
			|| c = .movesub(n, r)
				return c
			return (p.first!, p.last!)(n < 0)
		return self

	
	function Move (|int| n, ||)
		cpp_part MoveN
		|| r = 0
		return .movesub(n, r)


	helper MoveSub (|int| n, |$int| r, |...?|)
		opt NoRefCounts
		real self
		if !n
			return self
		|| m = 0
		|| c = self
		|| lim = n.abs
		while m < lim
			c = c.step(n > 0)
			if !c
				r = m
				return nil
			++m

		r = m
		return c


	function Pop (||)
		// don't opt this :3
		rz = .last
		if rz 
			rz.remove // really bad bug here if you do


	function PopFirst (||)
		rz = .first
		if rz
			rz.remove


	function ReplaceWith (|| x)
		.Prev = x
		.Parent = nil


	function MoveTo (|...!| dest)
		// remove?
		require self != dest
		if Dest gt self
			dest.next = self
		  else
			dest.prev = self


	function ShuffleNow
		opt norefcounts
		|| n = .slowcount
		for n
			.first = .last!.move(-n.now)


	function IsOnlyChild (|bool|)
		return .IsLast and .IsFirst

	function HasOneChild (|bool|)
		nil checker
		return .HasChildCount(1)


	function RemoveChildren
		disabled ".clear now"


