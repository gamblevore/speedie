module Prefs
	// just a simple accessor to Config class
	|config| _Internal
			
	function New (|config|)
		opt norefcounts
		return ._Internal init config.Create(.DefaultPath)
	
	function DefaultPath (|string|)
		opt norefcounts
		return config.ConfigPath(app.BuildConfig("prefs"))
	
	function Save
		opt norefcounts
		._Internal.save?


