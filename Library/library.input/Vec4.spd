	function Sqrt (|vec4|)
		trin (6)
		cpp_wrapper

	function Exp (|vec4|)
		description "Computes e to the power of (x)" 
		trin (7)
		cpp_wrapper

	function Log (|vec4|)
		trin (8)
		cpp_wrapper

