	function AppendMultiReplace (|string| s, |dictionary of string| m, |ErrorReceiver| Rec=stderr) { cpp_wrapper JB_FS_AppendMultiReplace }
		
	function AppendHex (|int64| Num, |int|RoundTo=2)
