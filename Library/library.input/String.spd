function array.join (|array of string| self, |byte| sep = '\n', |string|)
	cpp_part JoinByte
	return .join(string.byte(sep))

function array.join (|array of string| self, |string| sep = "", |string|)
	flow off
	|| sl = sep.Length
	|| n = -sl
	for s in self
		n += s.length + sl
	|| fs = FastString(n)

	for s in self
		fs <~ sep
		start
		fs <~ s

	return fs

	

