				fs <~ c
				broken = false
		
		return fs


	function Yes (|message| where=nil, |bool|) // ispositive, isaffirmative, istrue
		if !self
			return false
		if self ~= "no"  or "false" or "off" or "0" or "":	return false
		if self ~= "yes" or "true"  or "on"  or "1": return true
		error (where, "Not a boolean value: '" + self + "'")


