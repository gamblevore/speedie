	helper MoveCodePoint (|ind| Pos, |int| CodePoints, |ind|)
		|| n	= .length
		|| s0	= .addr
		|| s	= s0 + pos
		if Codepoints >= 0
			|| s2 = s0 + n
			while (--CodePoints >= 0) and (s < s2)
				codepoint.utf8read(s)
		  else
			while (s > s0)
				|| c = (--s)[0]
				if (c < 0x80) or (c > 0xC0)
					++Codepoints
					if (CodePoints >= 0)
						exit
		return (s - s0)|ind|


