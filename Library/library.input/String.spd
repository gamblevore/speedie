	function Insert (|string| s, |int| i, |int| n = 0, |string|)
		// perry uses this. Useful.
		if i < 0
			n += i
			i = 0
		if n < 0
			n = 0
		|| fs = faststring()
		fs.size = .length + s.length - n
		fs.appendRange(self, 0, i)
		fs <~ s
		fs.appendRange(self, i+n, int.max)
		return fs

		
