

/*
	API to check if something different happened to the flow control from one platform to another
	only call: flowcontrol.Cond
*/

		
class FlowControl
	linkage:cpp_part Flow
	|FastBuff|				Buff
	|stringstream|			ReadInput
	|faststring| 			Write
	|bool| 					OK

	constructor (|string| Path)
		flow off
		.ok = .buff.Alloc(1MB)
		.init(path)
		print "Capturing flow: "
		printline path

	helper init (|string| path)
		flow off
		|| prev = path.AddExt(".expected")
		if AlwaysMove or (!prev.filesize and path.filesize)
			|| f = path.file
			if f.exists
				require f.moveto(prev)
		.write = path.out
		if prev.filesize
			|| S = prev.readFile
				.ReadInput = S.decompress.stream
	
	helper Flush
		flow off
		if .write
			.buff.tmpstr.CompressInto(.write, stats)
			// .write.Flush // compress always flushes
		.buff.Curr = .buff.start
			 

	destructor
		flow off
		FlowControl.Disabled = int.max
		.flush
		printline stats.render
		stats.clear

	
	helper addbyte (|byte| value)
		if .buff <~ value
			.Flush
		
	helper Cond (|byte| value, |bool|)
		flow off, opt norefcounts, visible

		.addbyte(value)
		|| r = .ReadInput
		if r == nil
			return true
		if !r.hasany
		|| b = r.byte
		if b == value
			return true
		.fail(string.byte(value), string.byte(b))


	function Fail (|string| found, |string| expected)
		opt norefcounts, flow off
		if !.readinput.hasany
			"New-stream longer than old-stream."
		  else
			|| Sep =  ("\n", " ")(found contains '\n'  or  expected contains '\n')
			print "Expected:"
			print sep
			print expected
			print sep
			print "but found:"
			print sep
			printline found
		printline app.StackTrace("JB_Flow_")
		.ReadInput = nil
		debugger

	
	module
		|flowcontrol|			Flow // DONT directly alter this 
		||						FlowDiff = "Flow differs here:"

		|CompressionStats| 		Stats
		|uint| 					Disabled = int.max
		|bool|					AlwaysMove
			
		syntax append (|bool| value, |bool|)
			visible, flow off, cpp_name JB_Flow__Cond
			if .disabled
				return value
			.disabled = 1
			.flow.cond(('T', 'F')(value))
			.disabled = 0
			return value
		
		syntax append (|string| name, |bool| Print=true,  |bool|)
			opt norefcounts, flow off, cpp_part AddStr
			
			if .disabled
				return true
			.disabled = 1
			rz = true
			|| f = .flow
			|| r = f.ReadInput
			if r != nil
				|| str = r.str(name.length)
				rz = str == name
				if !rz
					f.Fail(name, str)
				
			for c in name
				f.addbyte(c)
			.disabled = 0

		function Activate
			flow off
			.Disabled = int.max // in case its set badly
			.flow = FlowControl("/tmp/FlowControl/" + app.filename + ".txt.mz")
			.Disabled = 0
		
		function Stop
			flow off
			.Disabled = int.max
			.Flow = nil

		syntax Using (|FlowControlStopper|)
			flow off
			.Activate




datatype FlowControlStopper (uint)
	syntax usingcomplete
		flowcontrol.stop
