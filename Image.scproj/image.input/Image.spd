	iterator
		|| curr = ._controlclip.x1y1
		|| xstart = ._controlclip.x
		|| end = ._controlclip.x2y2
		while (curr.y < end.y)
			while (curr.x < end.x)
				yield (self[curr]) (curr)
				++curr.x
			curr = (xstart, curr.y+1)
	
	
