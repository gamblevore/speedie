
class CheeseShop
	|dictionary of string| inventory
	|string| ClerkName

	constructor (|message| cfg)
		.inventory = Dictionary()
		for name in cfg["cheeses"]
			.inventory.valuelower(name.name) = name.name
		.clerkName = cfg["clerk"].Value

	syntax access (|string| cheeseName, |string|)
		if (cheeseName == .clerkName)
			return "Sir?"
		
		return ("yes", "no")(.inventory.valuelower(cheeseName)!=nil)


main
	|| shop = CheeseShop(configData.parse$)
	printline "Red Leicester? " + shop["Red Leicester"]
	printline "Tilsit? " + shop["Tilsit"]
	printline "Wenslydale? " + shop["Wenslydale"]
	printline "Cheddar? " + shop["Cheddar"]
	printline "Joke " + shop["Barris"]


|| ConfigData = `
cheeses
	"Red Leicester"
	"Flamange"
	"Chester"
clerk
	Barris
`


