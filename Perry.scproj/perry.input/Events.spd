function perry.IdeAddProj (|string| Path, |PerryIDE| ide = nil, |PerryIDE!|) // initide
	|| old = perry.FindProj(path)
		ClickedTabs(nil, old)
		|| o = old.ide
			return o
	ide ?= PerryIDE.EmptyBase
	ide ?= PerryIDE(path.file)
	ide.LoadProject
	return ide


