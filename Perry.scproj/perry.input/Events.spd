function PerryIDE.FindNotTodo (|bool|)
	if .IsSingleFileProject
		|| c = .CurrFileRow
		|| root = .FileList[0]
		if c != root
			.NotTodo = c
	if !.nottodo
		.nottodo = .LocateProjRoot("./main.spd")
		if !.nottodo
			.nottodo = .LocateProjRoot("./index.spd")
			if !.nottodo
				.nottodo = .MainProjFol
	return .nottodo


