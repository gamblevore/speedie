	function Init
		.size = the~area
		.noclutter  = 2
		.CopyPaste	= CopyPasteFlags.PasteFile
		.onpaste = &perryopendoc


		with .toolbar 
			.size 			= the~width  by  20~down
			.takesfocus		= 0
			.ID				= "toolbar" 
			isnt drawsfocus
			.align			= ListViewState.aligncenter
			.gnormal.solid  = (0.0, 0.0, 0.0, 0.6) 
		
		
		with .DebugArgsList
			isnt visible
			is editable
			.size =  the~left+4 for 360  by  18~down back 150
