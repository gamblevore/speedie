			isnt editable 
			.takesfocus		= 0
			.size 			= the~left to the~middle+100  by  0 to 11
			.gnormal.clear


		with .SelInfo 
			.ID				= "SelInfo"
			.align			= ListViewState.alignright
			isnt editable
			.takesfocus		= 0
