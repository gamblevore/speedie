	function ShowRightStats
		if .isgraphics
			(.charinfo isnt visible)
			return
		
		(.charinfo is visible)
		(.lineinfo is visible)
		|| fs = FastString()
		|| t = .Editme.Text
		|| sel0 = .editme.sel0
		|| sel = .EditMe.SelText
		|| sel2 = sel
		if sel2.last.IsTextLine
			sel2 = sel2.Shorten(1)
		fs <~ "ln "
		fs <~ t[0, sel0].LineCount
		|| n = sel2.linecount-1			
			fs <~ "+"
			fs <~ n+1
		.LineInfo.text = fs
		
		if .BytesInfoMode
			fs <~ "byte $sel0"
			n = sel.Length
		  else
			fs <~ "ch ${t.charcount(0, sel0)}"
			n = sel.CharCount
		if n
			fs <~ "+"
			fs <~ n

		.charInfo.text = fs	

	
