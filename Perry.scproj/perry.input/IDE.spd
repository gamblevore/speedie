	function OpenDoc (GUIPasteEvent)
		require self
		if !.project
			.Loadproject(data.file)
			return true
		|| p   = data
		|| ext = p.ext
		|| f   = p.file
		if f.isdir
			p = p.pathdir
		if .GotoIncludedFile(p)
			0
		  elseif f.NeedsOwnWindow
			IdeAddProj(p)								// add as project
		  else
			.filelist.addextra(p)						// add root
		startupwindow.hide


