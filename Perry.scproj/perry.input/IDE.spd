	function ParseErrorDetect
		// not necessarily an error!? what if the file is not spd?
		for e.toplist in .errorlist
			if e isa error
				if e is parse
					e.remove
		
		if .IsEditingSource	
			|| err = .editme.MyError
				ifn err isa error
					log "ParseErrorDetect bug"
				  elseif err is parse
					.errorlist <~ err // right?

	
	function LoadStartupErrors
		while (|| err = stderr.pop)
			notifications <~ err
			if err.IsBad
				.StartupErrors <~ error(err)


