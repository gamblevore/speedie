	function UpdatePrefs
		|| d = .editme.Document$
		|| l = d.Location.Resolve
		if l ~= app.pref_path.resolve
			|| oldPrefs = app.prefs
			app.prefs = nil
			if app.PrefsInit(0)
				.notify("Reloaded Prefs.")
			  else
				.notify("Prefs are corrupted")
				app.prefs = oldPrefs
			.LoadState


