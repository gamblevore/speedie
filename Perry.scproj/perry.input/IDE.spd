	function ShowRightStats
		|| fs = FastString()
		|| t = .Editme.Text
		|| sel0 = .editme.sel0
		|| sel = .EditMe.SelText
		|| n = sel.linecount-1			
		fs <~ "ln "
		fs <~ t[0, sel0].LineCount
		if n
			fs <~ "+"
			fs <~ n
		fs.PadTo 9
		fs <~ " ch "
		fs <~ t.charcount(0, sel0)
		n = sel.CharCount
		if n
			fs <~ "+"
			fs <~ sel.CharCount
		fs.padto 25
		.SelInfo.text = fs	

	
