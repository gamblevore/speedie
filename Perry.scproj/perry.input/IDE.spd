	function ShowNextError (|int| dir=1, |bool|)
		opt norefcounts
		|| L = .ErrorList
		if !dir and !L.listsource.hasany
			return true
		
		|| Err = l.FirstSelected
		if keys.shift
			dir = -dir
		if err and dir
			err = err.loop(dir>0)
		if !err
			err = (L.start, l.end)(dir>0)
		if err
			L.select(err)
		  else
			err = .editme.myerror
			if err
				.ClickedError(err|error|)
		
		return true


