#!/usr/local/bin/spd

// DDA line drawing Algorithm example
import "GUI"


class Demo (Window)
	|ivec2| D
	|ivec2| D2
	
	behaviour FrameStep
		if .FrameCount isa 4
			.d = (256(), 256())
		.d2 = (256(), 256())
		gui.Touch
	
	behaviour Draw
		Where.DrawRect(self, colors.black)
		|| M = where.Size/2
		|| D = .d
		|| D2 = .d2
		for 9
			d = (d.hash&255)-128
			d2 = (d2.hash&255)-128
			|| range = d.RayCast
			for cc in range		//		<---- all the magic is in the .raycast function
				|| DD = ((Cc, Cc+1)*6) + M
				Where.DrawRect(DD, colors.red(0.5))
			|| range2 = d2.RayCast
			for cc in range2
				|| DD = ((Cc, Cc+1)*6) + M
				Where.DrawRect(DD, colors.blue(0.5))

main
	demo().RunAsMain(5)



