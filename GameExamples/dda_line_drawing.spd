#!/usr/local/bin/spd

// DDA line drawing Algorithm example
import "GUI"


class Demo (Window)
	|ivec2| D
	
	behaviour FrameStep
		.d = (256(), 256())
		gui.Touch
		
	behaviour Draw
		Where.DrawRect(self, colors.black)
		|| M = where.Size/2
		|| D = .d
		for 9
			d = (d.hash&255)-128
			for cc in d.RayCast		//		<---- all the magic is in the .raycast function
				|| DD = ((Cc, Cc+1)*6) + M
				Where.DrawRect(DD, colors.blue(0.5))

main
	demo().RunAsMain(20)



